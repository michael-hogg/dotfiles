fpath=(
  /usr/local/share/zsh-completions
  $fpath
)

plugins=(
  zsh_reload
  gpg-agent
  sudo
  git
  pip
  mvn
  docker
  docker-compose
  vagrant
  vault
  terraform
  inspec
