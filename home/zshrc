BULLETTRAIN_GIT_BG=white
BULLETTRAIN_GIT_FG=black
BULLETTRAIN_EXEC_TIME_BG=black
BULLETTRAIN_EXEC_TIME_FG=white
BULLETTRAIN_AWS_BG=blue
