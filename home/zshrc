export PYENV_VIRTUALENV_DISABLE_PROMPT=1

export CHEF_LICENSE=accept-silent

# Test Kitchen
export KITCHEN_YAML=.kitchen.yml
export KITCHEN_LOCAL_YAML=$HOME/.kitchen/config.yml

ZSH_THEME="bullet-train"

BULLETTRAIN_CUSTOM_MSG=""
